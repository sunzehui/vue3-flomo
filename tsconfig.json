{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "module": "esnext",
    "target": "es6",
    "lib": [
      "esnext",
      "dom",
      "es5",
      "ES2015.Promise",
      "ES2015",
      "es2017"
    ],
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "vite.config.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "src/**/*.tsx",
    "types/*.d.ts",
    "types/*.ts"
  ],
  "typeAcquisition": {
    "include": [
      "lodash"
    ]
  }
}
